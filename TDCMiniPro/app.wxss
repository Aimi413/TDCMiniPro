/**app.wxss**/
page {
  --themeColor: #c30d23;
  --themeColor2: #123376;
  font-family: "微软雅黑", Arial, Helvetica, sans-serif;
}
view, text {
  box-sizing: border-box;
}
button {
  padding: 0px !important;
}
button[disabled] {
  background-color: #cccccc !important;
}
.lt {
  float: left;
}
.rt {
  float: right;
}
.clear::after {
  content: "";
  display: block;
  clear: both;
}
.container {
  width: 90%;
  margin: 0px auto;
}
.between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ellipsis{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.colorBor {
  position: relative;
  border: 2px solid;
  border-color: #4474E6 #EF4A5B #EF4A5B #4474E6;
}
