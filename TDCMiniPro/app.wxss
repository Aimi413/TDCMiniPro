.dialogWin {
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 100;
}
.closeDialogWin {
  width: 60rpx;
  height: 60rpx;
  margin: 30rpx 30rpx 0px 0px;
}
.dialogBox {
  position: absolute;
  width: 100%;
  /* height: 900rpx; */
  height: 85%;
  padding-top: 60rpx;
  bottom: 0px;
  left: 0px;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
  background-color: #ffffff;
}
.newMsgDot {
	position: absolute;
	width: 28rpx;
	height: 28rpx;
	top: 10rpx;
	right: 24rpx;
	border-radius: 100%;
	background-color: #EF4A5B;
}
.sectionTitle {
  font-size: 38rpx;
  font-weight: bold;
  color: var(--themeColor2);
}