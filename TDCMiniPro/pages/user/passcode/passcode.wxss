page {
	width: 100%;
	height: 100%;
}
.codeWrap {
	width: 100%;
	height: 100%;
	padding-top: 50rpx;
	background-color: var(--themeColor2);
}
.codeWrap.red {
	background-color: var(--themeColor);
}
.codeBox {
	box-sizing: border-box;
	width: 92%;
	margin: 0px auto;
	padding: 70rpx 45rpx;
	border-radius: 6px;
	background-color: #ffffff;
}
.codeHead {
	margin-bottom: 40rpx;
}
.codeInfo {
	width: calc(100% - 150rpx);
}
.codeName {
	margin-bottom: 10rpx;
	font-size: 44rpx;
	font-weight: bold;
	color: var(--themeColor2);
}
.codeJobTitle {
	font-size: 28rpx;
	color: #666666;
}
.codePhoto {
	width: 105rpx;
	height: 105rpx;
	margin-left: 45rpx;
	border-radius: 100%;
}
.codeImg {
	display: block;
	width: 560rpx;
	height: 560rpx;
	margin: 0px auto;
}
.refreshBtn {
	width: 300rpx;
	height: 100rpx;
	margin: 80rpx auto 0px;
	font-size: 32rpx;
	line-height: 100rpx;
	text-align: center;
	border-radius: 4px;
	background-color: #ffffff;
}