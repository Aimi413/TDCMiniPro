.postDetail {
	margin: 30rpx 0px 150rpx;
}
.postPerson {
	margin-bottom: 30rpx;
	font-size: 0px;
}
.postPersonPhoto, .postPersonInfo {
	display: inline-block;
	vertical-align: middle;
}
.postPersonPhoto {
	width: 60rpx;
	height: 60rpx;
	margin-right: 20rpx;
	border-radius: 100%;
}
.postPersonInfo {
	width: calc(100% - 80rpx);
}
.postPersonName {
	font-size: 28rpx;
	font-weight: bold;
	color: var(--themeColor2);
}
.postPersonCompany {
	font-size: 24rpx;
	color: #999999;
}
.postContent {
	margin-bottom: 30rpx;
    font-size: 32rpx;
    line-height: 56rpx;
    color: #000000;
}
.postImg {
	width: 100%;
	height: 380rpx;
	border-radius: 6px;
}
.postTime {
	margin: 30rpx 0px 0px;
	font-size: 24rpx;
	color: #CCCCCC;
}
.comments {
	margin-top: 60rpx;
	padding-top: 30rpx;
	border-top: 1px solid #E5E5E5;
}
.commentsCaption {
	margin-bottom: 36rpx;
	font-size: 38rpx;
	font-weight: bold;
	color: var(--themeColor2);
}
.commentItem {
	margin-bottom: 70rpx;
	font-size: 0px;
}
.commentatorPhoto, .commentItemInfos {
	display: inline-block;
	vertical-align: top;
}
.commentatorPhoto {
	width: 60rpx;
	height: 60rpx;
	margin-right: 20rpx;
	border-radius: 100%;
}
.commentItemInfos {
	width: calc(100% - 80rpx);
}
.commentatorInfo {
	margin-bottom: 30rpx;
}
.commentatorName {
	font-size: 28rpx;
	font-weight: bold;
	color: var(--themeColor2);
}
.commentatorCompany {
	font-size: 24rpx;
	color: #999999;
}
.commentItemContent {
	margin-bottom: 30rpx;
	font-size: 24rpx;
	line-height: 40rpx;
	color: #666666;
}
.commentItemTime {
	font-size: 24rpx;
	color: #CCCCCC;
}
.commentItemOperate {
	height: 40rpx;
	padding-left: 40rpx;
	font-size: 24rpx;
	line-height: 40rpx;
	background-position: left center;
	background-repeat: no-repeat;
	background-size: auto 30rpx;
	color: #666666;
}
.commentItemOperate.reply {
	margin-right: 70rpx;
	background-image: url("https://img.traveldaily.cn/events/app/2020/ask.png");
}
.commentItemOperate.star {
	background-image: url(https://img.traveldaily.cn/events/app/2020/like.png);
}
.commentItemOperate.hasStar {
	background-image: url(https://img.traveldaily.cn/events/app/2020/like3.png);
}
.replyBox {
	margin-top: 30rpx;
	padding: 30rpx;
	border-radius: 6px;
	background-color: #F8F8F8;
}
.replyItem {
	margin-bottom: 20rpx;
	font-size: 24rpx;
}
.replyItem:last-child {
	margin-bottom: 0px;
}
.replyName {
	color: #1652E0;
}
.moreReplyTip {
    padding-bottom: 20rpx;
	font-size: 24rpx;
	text-align: center;
	border-radius: 0px 0px 6px 6px;
	background-color: #F8F8F8;
	color: #CCCCCC;
}
.simulateComment {
	position: fixed;
	display: flex;
	bottom: 0px;
	left: 0px;
	width: 100%;
	height: 100rpx;
	padding: 10rpx 5%;
	justify-content: space-between;
	align-items: center;
	border-top: 1px solid #E5E5E5;
	background-color: #ffffff;
}
.openInputWin {
	width: 360rpx;
	height: 70rpx;
	margin-right: 50rpx;
	padding: 0px 0px 0px 20rpx;
	font-size: 24rpx;
	line-height: 70rpx;
	border-radius: 4px;
	background-color: #F5F5F5;
	color: #666666;
}
.toolsItem {
	position: relative;
	width: 50rpx !important;
	height: 50rpx;
	background-color: #ffffff;
	background-repeat: no-repeat;
	background-size: 48rpx;
}
.toolsStar {
	background-image: url(https://img.traveldaily.cn/events/app/2020/like.png);
	background-position: top center;
}
.toolsStar.hasStar {
	background-image: url(https://img.traveldaily.cn/events/app/2020/like3.png);
}
.toolsComment {
	background-image: url("https://img.traveldaily.cn/events/app/2020/ask.png");
	background-position: bottom center;
}
.toolsSharePost {
	margin: 0px !important;
	background-image: url("https://img.traveldaily.cn/events/app/2020/share1.png");
	background-position: center center;
	background-size: 42rpx;
}
.toolsBadge {
	position: absolute;
	min-width: 48rpx;
    padding: 4rpx;
    font-size: 24rpx;
	line-height: 24rpx;
	text-align: center;
    right: -12rpx;
    top: -10rpx;
    border-radius: 40rpx;
    background-color: var(--themeColor);
    color: #ffffff;
}
.commentInputBox {
	align-items: flex-end;
}
.commentInput {
	box-sizing: border-box;
	width: 100%;
	height: 250rpx;
	padding: 10rpx;
	background-color: #f8f8f8;
}
.commentBtns {
	margin-top: 40rpx;
}
.commentBtn {
	width: 300rpx !important;
	height: 70rpx;
	margin: 0px !important;
	font-size: 32rpx;
	font-weight: normal;
	line-height: 70rpx;
	border-radius: 4px;
	background-color: #ffffff;
}
.cancelComment {
	border: 1px solid var(--themeColor);
	color: var(--themeColor);
}
.submitComment {
	background-color: var(--themeColor);
	color: #ffffff;
}
.showedReplyList {
	padding-top: 30rpx;
	border-top: 1px solid #E5E5E5;
}
.replyCaption {
	margin-bottom: 36rpx;
    font-size: 38rpx;
    font-weight: bold;
    color: var(--themeColor2);
}
