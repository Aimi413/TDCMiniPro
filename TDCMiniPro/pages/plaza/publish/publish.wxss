.publishBox {
	margin-top: 60rpx;
}
.publishInputBox {
	height: 260rpx;
}
.publishInput {
	width: 100%;
	height: 230rpx;
	border-radius: 6px;
}
.limitBox {
	font-size: 28rpx;
	text-align: right;
	color: #999999;
}
.limitNum {
	color: #000000;
}
.pictureBox {
	position: relative;
	width: 180rpx;
	height: 180rpx;
	margin-top: 30rpx;
	border-radius: 6px;
}
.closePic {
	position: absolute;
	display: flex;
	width: 60rpx;
	height: 60rpx;
	justify-content: center;
	align-items: center;
	border-radius: 100%;
	top: -30rpx;
	right: -30rpx;
	background-color: rgba(0, 0, 0, 0.8);
}
.closePicImg {
	width: 40rpx;
	height: 40rpx;
}
.picture {
	width: 100%;
	height: 180rpx;
	border-radius: 6px;
}
.addPic {
	display: flex;
	width: 180rpx;
	height: 180rpx;
	justify-content: center;
	align-items: center;
	margin-top: 30rpx;
	border-radius: 6px;
	background-color: #F5F5F5;
}
.addPicIcon {
	width: 60rpx;
	height: 60rpx;
}
.publishBtn {
	position: fixed;
	width: 300rpx;
	height: 100rpx;
	bottom: 60rpx;
	left: 50%;
	transform: translateX(-50%);
	border-radius: 4px;
	font-size: 36rpx;
	line-height: 100rpx;
	text-align: center;
	background-color: var(--themeColor);
	color: #ffffff;
}