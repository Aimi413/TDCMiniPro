.dataPanel {
	margin-bottom: 36rpx;
	padding: 50rpx 0px 0px;
	text-align: center;
	background: url("https://img.traveldaily.cn/events/app/2020/guest/guestTopBg.png") top center/100% auto no-repeat;
	overflow: hidden;
}
.dataNum {
	margin-bottom: 10rpx;
	font-size: 108rpx;
	color: #ffffff;
}
.dataDesc {
	margin-bottom: 28rpx;
	font-size: 32rpx;
	color: #ffffff;
}
.goSearch {
	box-sizing: border-box;
	display: flex;
	width: 360rpx;
	height: 70rpx;
	justify-content: center;
	align-items: center;
	margin: 0px auto 40rpx;	
	padding: 0px 20rpx;
	font-size: 28rpx;
	border: 1px solid #ffffff;
	border-radius: 4px;
	background-color: #0C2352;
	color: #ffffff;
}
.goSearchIcon {
	/* width: 30rpx; */
	/* height: 30rpx; */
	/* margin: 15rpx 10rpx 70rpx 0px; */
	margin: 0px 10rpx 0px 0px;
}

.section {
	margin-bottom: 70rpx;
}
.concerns {
	padding-bottom: 70rpx;
	border-bottom: 1px solid #E5E5E5;
}
.sectionHead {
	margin-bottom: 36rpx;
}
.industryTag {
	position: relative;
	margin: 0px 28rpx 28rpx 0px;
	padding: 0px 25rpx;
	font-size: 28rpx;
	line-height: 70rpx;
	border: 1px solid transparent;
	border-radius: 4px;
	background-color: #F8F8F8 !important;	
	color: #000000;
}
.industryTag .newMsgDot {
	top: -14rpx;
	right: -14rpx;
}
.noConcernTip {
	margin-bottom: 28rpx;
	font-size: 28rpx;
	color: #000000;
}
.openAllIndustry {
	box-sizing: border-box;
	width: 225rpx;
	padding: 0px 25rpx;
	font-size: 28rpx;
	line-height: 70rpx;
	border-radius: 4px;
	background-color: var(--themeColor);
	color: #ffffff;
}
.seeMoreLink {
	height: 40rpx;
	font-size: 28rpx;
	line-height: 40rpx;
	color: #666666;
}
.seeMoreLinkIcon {
	display: inline-block;
	vertical-align: middle;
	width: 32rpx;
	height: 32rpx;	
}

.recentList {
	display: flex;
	overflow: hidden;
	overflow-x: scroll;
	margin-bottom: 210rpx;
	-webkit-overflow-scrolling: touch;
}
.guestLink {
	position: relative;
	width: 106rpx;
	margin-right: 28rpx;
}
.guestLink .newMsgDot {
	top: 0px;
	right: 0px;
}
.guestPhoto {
	width: 106rpx;
	height: 106rpx;
	border-radius: 100%;
}

.btomAds {
	position: fixed;
	bottom: 0px;
	left: 0px;
	width: 100%;
	height: 140rpx;
}
.adImg {
	width: 100%;
	height: 140rpx;
}

.dialogBox {
	box-sizing: border-box;
	padding-bottom: 156rpx;
	overflow: hidden;
}
.industryGroup {
	margin-bottom: 80rpx;
}
/* .industryGroup:nth-last-child(2) {
	margin-bottom: 156rpx;
} */
.industryGroupTitle {
	margin-bottom: 36rpx;
}
.industryTag.checked {
	border: 1px solid var(--themeColor);
	background-color: #ffffff;
	color: var(--themeColor);
}
.industryBtns {
	position: fixed;
	bottom: 0px;
	left: 0px;
	width: 100%;
	padding: 28rpx 5%;
	font-size: 0px;
	text-align: center;
	background-color: #ffffff;
	z-index: 200;
}
.industryBtn {
	display: inline-block;
	vertical-align: middle;
	width: 300rpx;
	font-size: 36rpx;
	border-radius: 4px;
	font-weight: normal;
	line-height: 100rpx;
	color: #000000;
}
.cancelIndustryBtn {
	margin-right: 20rpx;
	background-color: #F8F8F8;
}
.submitIndustryBtn {
	background-color: var(--themeColor);
	color: #ffffff;
}